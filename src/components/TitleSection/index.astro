---
interface Props {
  tag?: string;
  text: string;
  size?: number;
  weight?: number;
  color?: string;
  mt?: number;
  mb?: number;
}

const {
  tag = 'h1',
  text,
  size = 1.2,
  weight = 1.2,
  color = '#4a5568',
  mt = 0,
  mb = 0,
} = Astro.props;

const Element = `<${tag}
style="
  font-size: ${size}rem;
  font-weight: ${weight};
  color: ${color};
  margin-top: ${mt}rem;
  margin-bottom: ${mb}rem;
">
  ${text}
</${tag}>`;
---

<Fragment set:html={Element} />

