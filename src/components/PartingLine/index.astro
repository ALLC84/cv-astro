---
interface Props {
  weight?: number;
  width?: number;
  bg?: string;
  mt?: number;
  mb?: number;
  ml?: number;
  mr?: number;
}

const { weight = 0.1, width, bg = '#a0aec0', mt = 0.5, mb = 0.5, ml = 0, mr } = Astro.props;

const styleObject = {
  flex: 1,
  border: 'none',
  borderTop: `${weight}rem solid ${bg}`,
  width: `${width}%`,
  marginTop: `${mt}rem`,
  marginBottom: `${mb}rem`,
  marginLeft: ml !== null ? `${ml}rem` : 'auto',
  marginRight: ml !== null ? `${mr}rem` : 'auto',
}
---

<hr style={styleObject} />