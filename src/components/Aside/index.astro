---
import TitleSection from '@components/TitleSection/index.astro';
import PartingLine from '@components/PartingLine/index.astro';
import Avatar from './Avatar.astro';
import Contact from './Contact.astro';
import SkillLevel from './SkillLevel.astro';

import skillsData from '@data/skills.json';
import skillsTechData from '@data/skillsTech.json';
import languageData from '@data/language.json';

const colorText = '#a0aec0',
  titleMarginTop = 1.8;

const dataContent = [
  {
    name: skillsData.name,
    skills: skillsData.values,
  },
  {
    name: skillsTechData.name,
    skills: skillsTechData.values,
  },
  {
    name: languageData.name,
    skills: languageData.values,
  },
];
---

<section>
  <!--
  |-----------------------------------------------
  |  IMAGEN
  |-----------------------------------------------
  -->
  <Avatar />

  <!--
  |-----------------------------------------------
  |  CONTACTO
  |-----------------------------------------------
  -->
  <TitleSection
    text="CONTACTO"
    color={colorText}
    mt={titleMarginTop}
    weight={600}
    tag="h4"
  />
  <PartingLine weight={0.15} />
  <Contact />
</section>

<!--
|-----------------------------------------------
|  HABILIDADES, TECNOLOGÍAS, LENGUAJES
|-----------------------------------------------
-->
{
  dataContent.map(section => (
    <section>
      <TitleSection
        text={section.name}
        color={colorText}
        mt={titleMarginTop}
        weight={600}
        tag="h4"
      />
      <PartingLine weight={0.15} />
      <SkillLevel skills={section.skills} />
    </section>
  ))
}
